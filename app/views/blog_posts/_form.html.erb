<%= form_with model: blog_post do |form| %>
  <%= render "shared/form_errors", form: form %>
  <div class="mb-3">
    <%= form.label :title %>
    <%= form.text_field :title, class:"form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :content %>
    <%= form.rich_text_area :content, class:"form-control" %>
  </div>
  <%= form.submit class:"btn btn-primary" %>
<% end %>